{
  "compilerOptions": {
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "sourceRoot": "./",
    "mapRoot": "./",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2019",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "rootDir": "./"
  }
}